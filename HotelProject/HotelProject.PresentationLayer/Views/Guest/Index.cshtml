@model List<HotelProject.Entitylayer.Concrete.Guest>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin1Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Adı</th>
        <th>Soyadı</th>
        <th>Şehir</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.City</td>
            <td><a href="/Guest/DeleteGuest/@item.Id" class="btn mb-1 btn-rounded btn-danger">Sil</a></td>
            <td><a href="/Guest/UpdateGuest/@item.Id" class="btn mb-1 btn-rounded btn-success">Güncelle</a></td>
        </tr>
    }
</table>

<a href="/Guest/AddGuest/" class="btn mb-1 btn-rounded btn-info">Yeni Müşteri Girişi</a>



@model HotelProject.Entitylayer.Concrete.Guest
@{
    ViewData["Title"] = "AddGuest";
    Layout = "~/Views/Shared/_Admin1Layout.cshtml";
}


<form method="post" asp-action="AddGuest" asp-controller="Guest">
    <label>Misafir Adı</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    <label>Misafir Soyadı</label>
    <input type="text" asp-for="Surname" class="form-control" />
    <span asp-validation-for="Surname" class="text-danger"></span>
    <br />
    <label>Misafir Şehir</label>
    <input type="text" asp-for="City" class="form-control" />
    <span asp-validation-for="City" class="text-danger"></span>
    <br>

    <button class="btn btn-primary" type="submit"> Misafiri Ekle </button>
</form>


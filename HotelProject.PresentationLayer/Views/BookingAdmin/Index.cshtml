@model List<HotelProject.Entitylayer.Concrete.BookRoom>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin1Layout.cshtml";
    int count = 0;
}

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Misafir</th>
                <th>Giriş Tarihi</th>
                <th>Çıkış Tarihi</th>
                <th>Durum</th>
                <th>Onayla</th>
                <th>İptal Et</th>
                <th>Beklet</th>
                <th>Güncelle</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>

                    <th>@count</th>
                    <td>@item.Name</td>
                    <td>@(((DateTime)item.CheckIn).ToString("dd-MMM-yyyy"))</td>
                    <td>@(((DateTime)item.CheckOut).ToString("dd-MMM-yyyy"))</td>
                    <td><span class="badge badge-success px-2 rectangle-badge">@item.Status</span></td>
                    @* <td><span class="badge badge-primary px-2">@item.Status</span></td>*@
                    <td><a href="/BookingAdmin/ApprovedReservatiion/@item.Id" class="btn btn-primary">Onayla</a></td>
                    <td><a href="/BookingAdmin/DeleteBookingAdmin/@item.Id" class="btn btn-danger">Sil</a></td>
                    <td><a href="/BookingAdmin/WaitReservation/@item.Id" class="btn btn-warning">Beklet</a></td>
                    <td><a href="/BookingAdmin/UpdateBookRoom/@item.Id" class="btn btn-info">Güncelle</a></td>


                </tr>

            }
        </tbody>
    </table>
</div>

<style>
    .rectangle-badge {
        border-radius: 0; /* Yuvarlak köşeleri kaldırarak dikdörtgen yapar */
    }
</style>